<%= render 'admins/shared/admin_sidebar' %>
<%= render 'admins/shared/header' %>

<div id="layoutSidenav_content">
    <div class="container-fluid">
        <h1 class="mt-4">ダッシュボード</h1>
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">本日の発注本数</div>
                            <div class="card-body"><%= @orders.count%>本</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">本日の応募本数</div>
                            <div class="card-body"><%= @applies.count%>本</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">本日の納品本数</div>
                            <div class="card-body"><%= @delivered.count%>本</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">本日の公開本数</div>
                            <div class="card-body"><%= @published.count%>本</div>
                    </div>
                </div>
            </div>
        <div class="card mb-4">
            <div class="card-header">検修待ち一覧</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>タイトル</th>
                                    <th>第一キーワード</th>
                                    <th>第二キーワード</th>
                                    <th>文字数</th>
                                    <th>応募日</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                <% @posts.each do |post| %>
                                    <td><%= post.order.title %></td>
                                    <td><%= post.order.first_keyword %></td>
                                    <td><%= post.order.second_keyword %></td>
                                    <td><%= post.order.words %></td>
                                    <td><%= link_to "記事を確認する", admins_post_path(post), class: "btn btn-primary" %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= form_with model: @admin, url: admin_session_path, class: 'registration-main', local: true do |f| %>
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header"><h3 class="text-center font-weight-light my-4">ログイン</h3></div>
                <div class='login-flash-message'>
                  <%= flash[:notice] %>
                  <%= flash[:alert] %>
                </div>
                  <div class="card-body">
                    <div class="form-group">
                      <label class="small mb-1">メールアドレス</label>
                        <%= f.email_field :email, class:"form-control py-4", id:"email", placeholder:"メールアドレスを入力してください", autofocus: true %>
                    </div>
                    <div class="form-group">
                      <label class="small mb-1">パスワード</label>
                        <%= f.password_field :password, class:"form-control py-4", id:"password", placeholder:"パスワードを入力してください" %>
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                        <label class="custom-control-label" for="rememberPasswordCheck">パスワードを記録する</label>
                      </div>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                      <a class="small" href="password.html">パスワードをお忘れですか?</a>
                        <%= f.submit "ログイン" ,class:"btn btn-primary" %>
                    </div>
                  </div>
                  <div class="card-footer text-center">
                    <div class="small"><%= link_to 'アカウントを新規に登録する方はこちら', new_user_registration_path %></div>
                  </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
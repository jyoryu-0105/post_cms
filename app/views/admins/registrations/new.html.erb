<%= form_with model: @admin, url: admin_registration_path, class: 'registration-main', local: true do |f| %>
  <div id="layoutAuthentication_content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">アカウントを作成する</h3></div>
              <div class='login-flash-message'>
                <%= flash[:notice] %>
                <%= flash[:alert] %>
              </div>
                <div class="card-body">
                      <div class="form-group">
                        <label class="small mb-1">ニックネーム</label>
                        <%= f.text_field :nickname, class:"form-control py-4", id:"nickname", placeholder:"ニックネームを入力してください"%>
                      </div>
                      <div class="form-group">
                        <label class="small mb-1">メールアドレス</label>
                        <%= f.email_field :email, class:"form-control py-4", id:"email", placeholder:"メールアドレスを入力してください", autofocus: true %>
                      </div>
                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1">パスワード</label>
                        <%= f.password_field :password, class:"form-control py-4", id:"password", placeholder:"6文字以上の半角英数字" %>
                      </div>
                    </div>
                  <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1">確認用パスワード</label>
                        <%= f.password_field :password_confirmation, class:"form-control py-4", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
                      </div>
                  </div>
                </div>
                  <div class="form-group mt-4 mb-0">
                    <%= f.submit "アカウントを作成する" ,class:"btn btn-primary btn-block" %>
                  </div>
              </div>
            <div class="card-footer text-center">
              <div class="small">
                <%= link_to 'アカウントをお持ちの方はこちら', new_user_session_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>